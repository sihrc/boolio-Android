<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/theme_blue"
        android:padding="@dimen/general_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description_header"
            android:src="@drawable/logo_white"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_bar">

        <io.boolio.android.custom.PullToRefreshView
            android:id="@+id/ptr_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/question_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/feed_list_divider_color"
                android:dividerHeight="@dimen/question_feed_padding"/>

        </io.boolio.android.custom.PullToRefreshView>
    </FrameLayout>
</RelativeLayout>