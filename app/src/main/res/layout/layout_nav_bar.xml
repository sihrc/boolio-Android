<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_bar_height"
    android:layout_alignParentBottom="true"
    android:background="@color/theme_blue"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/general_padding"
    android:paddingRight="@dimen/general_padding">

    <ImageView
        android:id="@+id/nav_bar_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".5"
        android:background="@drawable/nav_bar_button"
        android:contentDescription="@string/content_desc_nav_bar_button"
        android:src="@drawable/feed" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></View>

    <ImageView
        android:id="@+id/nav_bar_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".5"
        android:background="@drawable/nav_bar_button"
        android:contentDescription="@string/content_desc_nav_bar_button"
        android:src="@drawable/search" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></View>

    <ImageView
        android:id="@+id/nav_bar_add_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:background="@drawable/nav_bar_button"
        android:contentDescription="@string/content_desc_nav_bar_button"
        android:src="@drawable/search" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></View>

    <ImageView
        android:id="@+id/nav_bar_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".5"
        android:background="@drawable/nav_bar_button"
        android:contentDescription="@string/content_desc_nav_bar_button"
        android:src="@drawable/categories" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></View>

    <ImageView
        android:id="@+id/nav_bar_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".5"
        android:background="@drawable/nav_bar_button"
        android:contentDescription="@string/content_desc_nav_bar_button"
        android:src="@drawable/profile" />

</LinearLayout>