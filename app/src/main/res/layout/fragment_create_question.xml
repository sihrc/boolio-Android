<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fcfcfc"
                android:gravity="center"
                android:padding="@dimen/create_question_padding">
    <RelativeLayout
        android:id="@+id/progress_bar_saving"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/inactive_background"
        android:visibility="gone">

        <fr.castorflex.android.circularprogressbar.CircularProgressBar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/progress_size"
            android:layout_height="@dimen/progress_size"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:indeterminate="true"
            app:cpb_color="#FFee44"
            app:cpb_colors="@array/progress_colors"
            app:cpb_max_sweep_angle="300"
            app:cpb_min_sweep_angle="10"
            app:cpb_rotation_speed="1.0"
            app:cpb_stroke_width="6dp"
            app:cpb_sweep_speed="1.0"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/question_image_height"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/place_image"
        android:textSize="@dimen/general_large_text"/>

    <io.boolio.android.custom.BoolioNetworkImageView
        android:id="@+id/create_question_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/question_image_height"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/create_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_question_image"
        android:gravity="center"
        android:hint="@string/create_question_text_hint"
        android:imeOptions="actionNext"
        android:padding="@dimen/question_padding"
        android:singleLine="true"
        android:textSize="@dimen/question_text_size"/>

    <EditText
        android:id="@+id/create_question_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_question_text"
        android:gravity="center"
        android:hint="@string/create_question_tags_hint"
        android:imeOptions="actionNext"
        android:padding="@dimen/question_padding"
        android:singleLine="true"
        android:textSize="@dimen/question_text_size"/>

    <LinearLayout
        android:id="@+id/create_question_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_question_tag"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/create_question_left_answer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/left_answer_button"
            android:gravity="center"
            android:hint="@string/create_question_answer_left_hint"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/feed_question_left_color"
            android:textColorHint="@color/feed_question_left_color"/>

        <EditText
            android:id="@+id/create_question_right_answer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/right_answer_button"
            android:gravity="center"
            android:hint="@string/create_question_answer_right_hint"
            android:imeOptions="actionDone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/feed_question_right_color"
            android:textColorHint="@color/feed_question_right_color"/>
    </LinearLayout>

    <Button
        android:id="@+id/create_question_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_question_buttons"
        android:background="@drawable/left_answer_button"
        android:text="@string/create_question_submit"/>
</RelativeLayout>