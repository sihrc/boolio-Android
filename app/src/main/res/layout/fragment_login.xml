<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/activity_horizontal_margin">

    <EditText
        android:id="@+id/login_email"
        android:layout_width="@dimen/login_input_length"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/input_text_margin"
        android:gravity="center"
        android:hint="@string/login_email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/input_text_padding"
        />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="@dimen/login_input_length"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:padding="@dimen/input_text_padding"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/login_input_length"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:background="@drawable/boolio_login"
        android:text="@string/login_button"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_with_facebook"/>

    <Button
        android:id="@+id/facebook_login"
        style="@style/facebook_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_facebook_height"/>

    <com.facebook.widget.LoginButton
        android:id="@+id/fb_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
</LinearLayout>