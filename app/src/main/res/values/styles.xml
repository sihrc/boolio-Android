<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
    </style>

	<style name="elv_fade_animation">
		<item name="@android:windowEnterAnimation">@anim/elv_popup_show</item>
		<item name="@android:windowExitAnimation">@anim/elv_popup_hide</item>
	</style>

    <style name="facebook_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/facebook_button</item>
        <item name="android:drawablePadding">@dimen/facebook_login_padding</item>
        <item name="android:paddingLeft">@dimen/facebook_login_padding</item>
        <item name="android:paddingRight">@dimen/facebook_login_padding</item>
        <item name="android:text">@string/login_button_facebook</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="nav_bar_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/nav_bar_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="header_text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">bold</item>
        <item name="android:textSize">@dimen/profile_large_size</item>
    </style>

    <style name="profile_large_text" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/profile_large_size</item>
    </style>


    <style name="header_big_text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/profile_large_size</item>
        <item name="android:padding">@dimen/search_padding</item>
    </style>

    <style name="profile_big_text_in" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/profile_large_size</item>
    </style>


    <style name="profile_medium_text" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/profile_medium_size</item>
    </style>

    <style name="profile_medium_text_in" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/profile_medium_size</item>
    </style>

    <style name="profile_small_text" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/profile_small_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">.5</item>
    </style>

    <style name="input_text" parent="@android:style/Widget.EditText">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">@dimen/question_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_text_box</item>
        <item name="android:textSize">@dimen/question_text_size</item>
    </style>

    <style name="search_bar" parent="@android:style/Widget.EditText">
        <item name="android:padding">@dimen/question_padding</item>
        <item name="android:textSize">@dimen/question_text_size</item>
    </style>

    <style name="input_button_style" parent="@android:style/Widget.EditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/darker_blue</item>
        <item name="android:textColorHint">@color/darker_blue</item>
    </style>

    <style name="answer_style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/question_answer_padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="view_pager_title" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/profile_asked_answered_padding</item>
        <item name="android:textColor">@color/darker_blue</item>
    </style>
</resources>
